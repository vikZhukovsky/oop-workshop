#!/usr/bin/env php

<?php
$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
Ip Geolocation Informer
Usage:
  gendiff (-h|--help)
  gendiff [--format <data format> --ip <ip address>]
Options:
  -h --help                     Show this screen
  --format <data format>        Responded format [default: json]
  --ip <ip address>             Requested ip address
DOC;

$args = \Docopt::handle($doc);

$dataFormat = $args["--format"] ?? 'json';
$ipAddress = $args["--ip"] ?? $_SERVER['REMOTE_ADDR'];

$app = new IpInformer\IpInformer($dataFormat, $ipAddress);
echo $app->takeInformation();